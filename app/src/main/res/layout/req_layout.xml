<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/req_profile"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_marginLeft="10dp"
        app:civ_border_width="0.2dp"
        app:civ_border_color="#46000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/req_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/req_profile"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nunito_semibold"
        android:layout_toEndOf="@+id/req_profile"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/req_confirm"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background2"
        android:text="Follow Back"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/req_name"
        android:layout_toEndOf="@+id/req_profile"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/req_cancel"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:background="@drawable/background_sugg"

        android:visibility="gone"
        android:text="Cancel"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/req_name"
        android:layout_toEndOf="@+id/req_confirm"
        android:textSize="12dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/colorPrimary" />
    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/req_confirm"
        android:background="#20000000" />
</RelativeLayout>